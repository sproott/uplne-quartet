---
import { Image, type LocalImageProps, type RemoteImageProps } from 'astro:assets'

interface Props {
	title: string
	description: string
	image: LocalImageProps['src']
	imageClass?: string
	imageWidth?: number
}

const { title, description, image, imageClass = '', imageWidth = 640 } = Astro.props
---

<div class="grid row-span-2 grid-rows-subgrid gap-y-6">
	<div>
		<Image width={imageWidth} class={`rounded-md ${imageClass}`} src={image} alt="TODO" />
	</div>
	<div class="box flex flex-col gap-4 justify-start p-8">
		<h1 class="text-3xl font-bold text-primary">{title}</h1>
		<p class="text-lg text-primary">{description}</p>
	</div>
</div>
